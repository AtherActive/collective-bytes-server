{
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"watch": true,
		"target": "es2020",
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,
		"outDir": "dist/",
		"baseUrl": "./src",
		"lib": ["ES2021"],
		"declaration": true,
		"module": "ES2022",
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"],
	
}